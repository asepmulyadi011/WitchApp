@using WitchApp.Models
@model IEnumerable<VillagerModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Villager List</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.AgeOfDeath)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.YearOfDeath)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Year)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.NumberOfPeopleKilled)</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() > 0)
            {
                int number = 0;
                
                foreach (VillagerModel villager in Model)
                {
                    number++;
                    <tr>
                        <th scope="row">@number</th>
                        <td>@villager.Name</td>
                        <td>@villager.AgeOfDeath</td>
                        <td>@villager.YearOfDeath</td>
                        <td>@villager.Year</td>
                        <td>@villager.NumberOfPeopleKilled</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <th colspan="6">No data</th>
                </tr>
            }
            
            <tr>
              <th scope="row" colspan="5">Average</th>
              <td>@ViewBag.Average</td>
            </tr>
        </tbody>
    </table>
</div>
