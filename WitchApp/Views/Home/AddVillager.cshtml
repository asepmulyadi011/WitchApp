@model VillagerModel

@{
    ViewData["Title"] = "Add Villager";
}

<div>
    @if (ViewBag.Display != null && ViewBag.Display == true)
    {
        <div class="alert @ViewBag.Type alert-dismissible fade show" role="alert">
            @ViewBag.Message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form asp-action="AddVillager">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="AgeOfDeath" class="control-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="AgeOfDeath" class="form-control" />
                <span asp-validation-for="AgeOfDeath" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="YearOfDeath" class="control-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="YearOfDeath" class="form-control" />
                <span asp-validation-for="YearOfDeath" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
